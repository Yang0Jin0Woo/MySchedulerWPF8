<Window x:Class="MyScheduler.Views.ScheduleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="일정 입력" Width="520" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="제목" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Margin="8,0,0,0"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"/>

        <Grid Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="시작" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1"
              Margin="8,0,0,0"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DatePicker Grid.Column="0"
                        SelectedDate="{Binding StartDate}"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Margin="8,0,8,0"
                       VerticalAlignment="Center"
                       Text="{Binding StartAmPmText}"/>

            <ComboBox Grid.Column="2"
                      Width="110"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding TimeOptions}"
                      SelectedItem="{Binding StartTime}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StringFormat={}{0:hh\\:mm}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="종료" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1"
              Margin="8,0,0,0"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DatePicker Grid.Column="0"
                        SelectedDate="{Binding EndDate}"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Margin="8,0,8,0"
                       VerticalAlignment="Center"
                       Text="{Binding EndAmPmText}"/>

            <ComboBox Grid.Column="2"
                      Width="110"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding TimeOptions}"
                      SelectedItem="{Binding EndTime}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StringFormat={}{0:hh\\:mm}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="장소" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <TextBox Grid.Row="6" Grid.Column="1"
                 Margin="8,0,0,0"
                 Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"/>

        <Grid Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="메모" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <TextBox Grid.Row="8" Grid.Column="1"
                 Margin="8,0,0,0"
                 Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>

        <TextBlock Grid.Row="10" Grid.ColumnSpan="2"
                   Foreground="Crimson"
                   Text="{Binding ErrorMessage}"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Row="11" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <Button Content="취소" Width="80" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="저장" Width="80" IsDefault="True"
                    Command="{Binding SaveCommand}"
                    Click="OnSaveClick"/>
        </StackPanel>
    </Grid>
</Window>
