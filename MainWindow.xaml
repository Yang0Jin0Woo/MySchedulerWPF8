<Window x:Class="MyScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MyScheduler.ViewModels"
        x:Name="Root"
        Title="MyScheduler" Width="1100" Height="650">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Calendar SelectedDate="{Binding SelectedDate}" />

        <Grid Grid.Column="1" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding SelectedDate, StringFormat=yyyy-MM-dd 일정}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding CurrentTimeText}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="12,0,0,0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ListBox Grid.Column="0"
                         ItemsSource="{Binding Schedules}"
                         SelectedItem="{Binding SelectedSchedule, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="0,0,0,8" BorderThickness="1" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Margin="0,4,0,0"
                                               Text="{Binding TimeRangeText}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Column="2" Padding="14" BorderThickness="1" CornerRadius="12"
                        DataContext="{Binding DataContext, ElementName=Root}">
                    <Grid>

                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="{Binding SelectedScheduleDetail.Title}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Row="1" Margin="0,10,0,0"
                                       Text="{Binding SelectedScheduleDetail.TimeRangeText, StringFormat=🕒 {0}}"/>

                            <TextBlock Grid.Row="2" Margin="0,10,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedScheduleDetail.Location}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedScheduleDetail.Location}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="📍 "/>
                                <Run Text="{Binding SelectedScheduleDetail.Location}"/>
                            </TextBlock>

                            <TextBox Grid.Row="3" Margin="0,12,0,0"
                                     Text="{Binding SelectedScheduleDetail.Notes}"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedScheduleDetail.Notes}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedScheduleDetail.Notes}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>

                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="일정을 선택하면 상세 내용이 표시됩니다."
                                           FontSize="14" Opacity="0.75" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Border>

            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="추가" Command="{Binding AddScheduleCommand}" Margin="0,0,8,0"/>
                <Button Content="수정" Command="{Binding EditScheduleCommand}" Margin="0,0,8,0"/>
                <Button Content="삭제" Command="{Binding DeleteScheduleCommand}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.ColumnSpan="2">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsLoadingList}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsLoadingDetail}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="#66000000"/>

            <Border Background="White" Padding="16" CornerRadius="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock FontSize="14" FontWeight="SemiBold" TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="처리 중..."/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Text" Value="저장/삭제 처리 중..."/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLoadingDetail}" Value="True">
                                        <Setter Property="Text" Value="상세 불러오는 중..."/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLoadingList}" Value="True">
                                        <Setter Property="Text" Value="목록 불러오는 중..."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <ProgressBar Margin="0,12,0,0" Height="10" IsIndeterminate="True"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
