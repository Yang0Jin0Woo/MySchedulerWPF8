<Window x:Class="MyScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="Root"
        Title="MyScheduler" Width="1100" Height="650">

    <Grid>
        <Grid x:Name="ContentLayer" Margin="12">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="IsEnabled" Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsLoadingList}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Calendar SelectedDate="{Binding SelectedDate}" />

            <Grid Grid.Column="1" Margin="12,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding SelectedDate, StringFormat={}{0:yyyy년 M월 d일} 일정}"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding NowKst, StringFormat={}{0:tt h:mm:ss}, ConverterCulture=ko-KR}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel LastChildFill="True" Grid.Row="0" Margin="0,0,0,8">
                            <ComboBox DockPanel.Dock="Left"
                                      Width="70"
                                      ItemsSource="{Binding SearchScopes}"
                                      SelectedItem="{Binding SelectedSearchScope}"
                                      SelectedIndex="0"
                                      VerticalAlignment="Center"/>

                            <Button DockPanel.Dock="Right"
                                    Content="초기화"
                                    Margin="6,0,0,0"
                                    Command="{Binding ClearSearchCommand}"
                                    VerticalAlignment="Center"/>

                            <Button DockPanel.Dock="Right"
                                    Content="검색"
                                    Margin="6,0,0,0"
                                    Command="{Binding ApplySearchCommand}"
                                    VerticalAlignment="Center"/>

                            <TextBox Margin="8,0,8,0"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     ToolTip="검색어를 입력하세요"/>
                        </DockPanel>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding SchedulesView}"
                                 SelectedItem="{Binding SelectedSchedule}"
                                 BorderThickness="1"
                                 BorderBrush="#B0B0B0"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"/>

                                        <TextBlock Grid.Row="1"
                                            Margin="0,4,0,0"
                                            Foreground="#666">
                                            <Run Text="{Binding StartAt,
                                                StringFormat={}{0:tt h:mm},
                                                ConverterCulture=ko-KR}"/>
                                            <Run Text=" ~ "/>
                                            <Run Text="{Binding EndAt,
                                                StringFormat={}{0:tt h:mm},
                                                ConverterCulture=ko-KR}"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>

                    <Grid Grid.Column="1" Margin="12,0,0,0">
                        <Border BorderBrush="#B0B0B0"
                                BorderThickness="1"
                                Padding="14">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="{Binding SelectedScheduleDetail.Title}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE823;"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding SelectedScheduleDetail.StartAt,
                                                            StringFormat={}{0:yyyy-MM-dd tt h:mm},
                                                            ConverterCulture=ko-KR}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding SelectedScheduleDetail.EndAt,
                                                            StringFormat={}{0:yyyy-MM-dd tt h:mm},
                                                            ConverterCulture=ko-KR}"/>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE707;"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                                    <TextBlock VerticalAlignment="Center"
                                               Text="{Binding SelectedScheduleDetail.Location}"/>
                                </StackPanel>

                                <Separator Grid.Row="3" Margin="0,0,0,10"/>

                                <Border Grid.Row="4"
                                        BorderBrush="#B0B0B0"
                                        BorderThickness="1"
                                        Padding="10"
                                        CornerRadius="4">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding SelectedScheduleDetail.Notes}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#444"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>

                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#777"
                                   FontSize="14">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            일정을 선택하면 상세 내용이 표시됩니다.
                        </TextBlock>

                        <Border Background="#80FFFFFF"
                                CornerRadius="4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoadingDetail}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="상세 불러오는 중..."
                                           FontWeight="SemiBold"
                                           Foreground="#444"
                                           HorizontalAlignment="Center"/>
                                <ProgressBar Margin="0,8,0,0"
                                             Width="140"
                                             Height="8"
                                             IsIndeterminate="True"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="CSV 내보내기" Command="{Binding ExportCsvCommand}" Margin="0,0,8,0"/>
                    <Button Content="추가" Command="{Binding AddScheduleCommand}" Margin="0,0,8,0"/>
                    <Button Content="수정" Command="{Binding EditScheduleCommand}" Margin="0,0,8,0"/>
                    <Button Content="삭제" Command="{Binding DeleteScheduleCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsLoadingList}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="#80000000">
                <Border HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="White"
                        Padding="20"
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock FontSize="14"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="처리 중..."/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                            <Setter Property="Text" Value="저장/삭제 처리 중..."/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsLoadingList}" Value="True">
                                            <Setter Property="Text" Value="목록 불러오는 중..."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ProgressBar Margin="0,12,0,0"
                                     Height="10"
                                     IsIndeterminate="True"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>
