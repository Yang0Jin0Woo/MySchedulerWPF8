<Window x:Class="MyScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MyScheduler.ViewModels"
        Title="MyScheduler" Width="1100" Height="650">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Calendar -->
        <Calendar SelectedDate="{Binding SelectedDate}" />

        <!-- Right: List + Detail -->
        <Grid Grid.Column="1" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding SelectedDate, StringFormat=yyyy-MM-dd 일정}"
                       FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <!-- List + Detail split -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- List (simple) -->
                <ListBox Grid.Column="0"
                         ItemsSource="{Binding Schedules}"
                         SelectedItem="{Binding SelectedSchedule, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="0,0,0,8" BorderThickness="1" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Margin="0,4,0,0">
                                        <Run Text="{Binding StartAt, StringFormat={}{0:HH:mm}}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding EndAt, StringFormat={}{0:HH:mm}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Detail (Read by Id) -->
                <Border Grid.Column="2" Padding="14" BorderThickness="1" CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Placeholder when nothing selected -->
                        <TextBlock Grid.Row="0" FontSize="14" Opacity="0.7">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Text" Value="일정을 선택하면 상세 내용이 표시됩니다."/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Detail Title -->
                        <TextBlock Grid.Row="0"
                                   Text="{Binding SelectedScheduleDetail.Title}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Detail Time -->
                        <TextBlock Grid.Row="1" Margin="0,10,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>

                            <Run Text="🕒 "/>
                            <Run Text="{Binding SelectedScheduleDetail.StartAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                            <Run Text=" ~ "/>
                            <Run Text="{Binding SelectedScheduleDetail.EndAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                        </TextBlock>

                        <!-- Detail Location -->
                        <TextBlock Grid.Row="2" Margin="0,10,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail.Location}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail.Location}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>

                            <Run Text="📍 "/>
                            <Run Text="{Binding SelectedScheduleDetail.Location}"/>
                        </TextBlock>

                        <!-- Detail Notes (full) -->
                        <TextBox Grid.Row="3" Margin="0,12,0,0"
                                 Text="{Binding SelectedScheduleDetail.Notes}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail.Notes}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedScheduleDetail.Notes}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                    </Grid>
                </Border>

            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="추가" Command="{Binding AddScheduleCommand}" Margin="0,0,8,0"/>
                <Button Content="수정" Command="{Binding EditScheduleCommand}" Margin="0,0,8,0"/>
                <Button Content="삭제" Command="{Binding DeleteScheduleCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
